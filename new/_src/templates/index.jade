extends layout

block styles
	link(rel='stylesheet', href='css/jquery.fancybox.css')
block scripts
	script(src="js/jquery.min.js")
	script(src="js/jquery.fancybox.pack.js")
	script(src="js/jquery.touchmouse.js")
	script(src="js/three.min.js")
	script(src="js/snake.js")
	script(src="js/app.js")

block content
	h2 Easy Figures
	each figure in page.metadata.figures
		.figure 
			a.fancybox(href="#3dviewer",data=figure.data,title=figure.title)
				img(src="img/"+figure.filename,alt=figure.title,width="130px",height="130px")
			p.title #{figure.title}
			- var breakable = figure.data.replace(/-/g,'-&#8203;')
			p #{breakable}

	#3dviewer
	.clear