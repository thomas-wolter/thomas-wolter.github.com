    block scripts
  body
    header
      div.inner
        a(href='/')
          img(src='img/logo3.png')
          h1 THOMAS-WOLTER.DE
      nav.bottom-seperator
        .main-navigation
          a(href='/') HOME
          a(href='snake.html').selected RUBIK'S SNAKE
          a(href='atompuzzle.html') ATOMPUZZLE
      nav
        .sub-navigation
          a(href='notation.html') notation
          a(href='easy_de.html').selected einfache figuren
          a(href='hard_de.html') schwere figuren
