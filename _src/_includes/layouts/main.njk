---
layout: layouts/base.njk
---
<header>
    <div class="header-container">
        <div class="header-main">
            <a id="logo" href="/">
                <div class="logo-title">
                    <span class="purple">Rubik's</span>
                    <span class="green">Snake</span>
                </div>
                <div class="logo-slogan">Fansite by Thomas Wolter</div>
            </a>
            <nav class="nav-main">
                {%- for nav in navigation %}
                    <a href="{{ nav.href }}" {% if page.url == nav.href %} aria-current="page"{% endif %}>{{ nav.text }}</a>
                {% endfor -%}
            </nav>
            <a role="button" href="/snake/player/" class="button">Playground</a>
        </div>
    </div>
</header>

<main>
    {{ content | safe }}
</main>

